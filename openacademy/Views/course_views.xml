<odoo>

	<record id="action_course" model="ir.actions.act_window">
		<field name="name">Courses</field>
		<field name="model">openacademy.course</field>
		<field name="view_mode">tree,form</field>
	</record>

	<record id="action_session" model="ir.actions.act_window">
		<field name="name">Sessions</field>
		<field name="model">openacademy.sessions</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="top_menu_openacademy" name="Openacademy" web_icon="openacademy, data/crazy.jpeg"/>

	<menuitem id="course_menu" name="Courses &amp; Sessions" parent="openacademy.top_menu_openacademy"/>

	<menuitem id="coruse_name_menu" name="Courses" parents="openacademy.course_menu_top" action="action_course"/>

	<menuitem id="session_menu" name="Sessions" parent="openacademy.course_menu_top" action="action_session"/>
</odoo>